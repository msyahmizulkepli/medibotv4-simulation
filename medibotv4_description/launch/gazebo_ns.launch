<launch>
  <arg name="first_robot"  default="robot1"/>
  <arg name="second_robot" default="robot2"/>
  <arg name="third_robot" default="robot3"/>

  <arg name="first_robot_x_pos" default="0.0"/>
  <arg name="first_robot_y_pos" default="10.0"/>
  <arg name="first_robot_z_pos" default=" 0.0"/>
  <arg name="first_robot_yaw"   default="-1.57"/>

  <arg name="second_robot_x_pos" default="5.0"/>
  <arg name="second_robot_y_pos" default="10.0"/>
  <arg name="second_robot_z_pos" default="0.0"/>
  <arg name="second_robot_yaw"   default="-1.57"/>

   <arg name="third_robot_x_pos" default="-5.0"/>
   <arg name="third_robot_y_pos" default="10.0"/>
   <arg name="third_robot_z_pos" default="0.0"/>
   <arg name="third_robot_yaw"   default="-1.57"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find aws_robomaker_hospital_world)/worlds/empty_hospital.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>  

  <group ns = "$(arg first_robot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find medibotv4_description)/urdf/medibotv4.xacro" />
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -model $(arg first_robot) -x $(arg first_robot_x_pos) -y $(arg first_robot_y_pos) -z $(arg first_robot_z_pos) 
        -Y $(arg first_robot_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg second_robot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find medibotv4_description)/urdf/medibotv4.xacro" />
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -model $(arg second_robot) -x $(arg second_robot_x_pos) -y $(arg second_robot_y_pos) -z $(arg second_robot_z_pos) 
        -Y $(arg second_robot_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg third_robot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find medibotv4_description)/urdf/medibotv4.xacro" />
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -model $(arg third_robot) -x $(arg third_robot_x_pos) -y $(arg third_robot_y_pos) -z $(arg third_robot_z_pos) 
        -Y $(arg third_robot_yaw) -param robot_description" />
  </group>

</launch>
<launch>
  <!-- No namespace here as we will share this description. 
       Access with slash at the beginning -->
  <param name="robot_description"
    command="$(find xacro)/xacro $(find medibotv4_description)/urdf/medibotv4.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find medibotv4_description)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 0 -y 10 -z 0 -Y -1.57" />
      <arg name="robot_name"  value="Robot1" />
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find medibotv4_description)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 5 -y 10 -z 0 -Y -1.57" />
      <arg name="robot_name"  value="Robot2" />
    </include>
  </group>

  <!-- BEGIN ROBOT 3-->
  <group ns="robot3">
    <param name="tf_prefix" value="robot3_tf" />
    <include file="$(find medibotv4_description)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x -5 -y 10 -z 0 -Y -1.57" />
      <arg name="robot_name"  value="Robot3" />
    </include>
  </group>

</launch>
